{% extends 'AppBundle::base.html.twig' %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="page-header">
                    <h1>Inmuebles<br>
                        <small>Secci√≥n de inmuebles</small>
                        <a href="{{ path('inmueble_add') }}" class="btn btn-sm btn-success pull-right">{{ "Add inmueble" | trans }}</a>
                    </h1>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th>{{ "Nombre" | trans }}</th>
                            <th>{{ "Descripcion" | trans }}</th>
                            <th>{{ "Direccion" | trans }}</th>
                            <th>{{ "Precio" | trans }}</th>
                            <th>{{ "Duracion" | trans }}</th>
                            <th>{{ "Autor" | trans }}</th>
                            <th>{{ "Acciones" | trans }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for inmueble in inmuebles  %}
                            <tr>
                                <td>{{ inmueble.name }}</td>
                                <td>{{ inmueble.description }}</td>
                                <td>{{ inmueble.duration }}</td>
                                <td>{{ inmueble.user.username }}</td>
                                <td>
                                    <a href="{# path('inmueble_get') #}" class="btn btn-sm btn-info">{{ "Ver" | trans }}</a>
                                    <a href="{# path('inmueble_mod') #}" class="btn btn-sm btn-primary">{{ "Editar" | trans }}</a>
                                    <a href="{# path('inmueble_del') #}" class="btn btn-sm btn-danger">{{ 'Borrar' | trans }}</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}