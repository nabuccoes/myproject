{% extends 'AppBundle::base.html.twig' %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="page-header">
                    <h1>{{ "Users" | trans }}<br>
                        <small>{{ "User section"|trans }}</small>
                        <a href="{{ path('user_add') }}" class="btn btn-sm btn-success pull-right">{{ "New User" | trans }}</a>
                    </h1>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th>{{ "Name" | trans }}</th>
                            <th>{{ "Email " | trans }}</th>
                            <th>{{ "Created at" | trans }}</th>
                            <th>{{ "Updated at" | trans }}</th>
                            <th>{{ "Actions" | trans }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users  %}
                            <tr>
                                <td>{{ user.username }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.createdAt|date('d-m-Y H:i')}}</td>
                                <td>{{ user.updatedAt|date('d-m-Y H:i')}}</td>
                                <td>
                                    <a href="{{ path('user_get', {id: user.id}) }}" class="btn btn-sm btn-info">{{ "View" | trans }}</a>
                                    <a href="{{ path('user_mod', {id: user.id}) }}" class="btn btn-sm btn-primary">{{ "Edit" | trans }}</a>
                                    <a href="{{ path('user_del', {id: user.id}) }}" class="btn btn-sm btn-danger">{{ "Delete" | trans }}</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}